set $sysmenu "system:  [r]eload  [l]ogout  [p]oweroff  re[b]oot"
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

set $monitormenu "system:  [1]-Monitor [2]-Monitors"
bindsym XF86Display      mode $monitormenu

mode $monitormenu {
    bindsym 1         exec ~/bin/xr1.sh, mode "default"
    bindsym 2         exec ~/bin/xr2.sh, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

set $soundmenu "system:  [s]potify [p]avucontrol"
bindsym $mod+BackSpace  mode $soundmenu

mode $soundmenu {
    bindsym s         workspace $w7name, exec spotify, mode "default"
    bindsym p         workspace $w10name, exec pactl load-module module-equalizer-sink, exec pactl load-module module-dbus-protocol, exec pavucontrol, exec qpaeq, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}